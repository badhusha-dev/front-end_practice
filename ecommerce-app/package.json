{
  "name": "ecommerce-app",
  "private": true,
  "version": "1.0.0",
  "description": "A modern e-commerce application built with React, Vite, and Tailwind CSS",
  "author": "Your Name",
  "keywords": [
    "react",
    "ecommerce",
    "vite",
    "tailwindcss",
    "typescript"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run --reporter=verbose",
    "test:integration": "vitest run --reporter=verbose src/__tests__/**/*.integration.test.{js,jsx}",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:all": "node scripts/test-runner.js",
    "test:e2e": "echo 'E2E tests would run here with Playwright'",
    "test:ci": "npm run lint && npm run test:coverage && npm run build",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@react-spring/three": "^10.0.2",
    "@react-spring/web": "^10.0.2",
    "@react-three/drei": "^10.7.6",
    "@react-three/fiber": "^9.3.0",
    "@reduxjs/toolkit": "^2.9.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "@tanstack/react-query": "^5.87.4",
    "@types/three": "^0.180.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.12.1",
    "file-saver": "^2.0.5",
    "miragejs": "^0.1.48",
    "papaparse": "^5.5.3",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router-dom": "^7.9.1",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.0",
    "redux-persist": "^6.0.0",
    "tailwindcss": "^3.4.17",
    "three": "^0.180.0",
    "yup": "^1.7.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.1.2",
    "vitest": "^2.1.9"
  }
}
